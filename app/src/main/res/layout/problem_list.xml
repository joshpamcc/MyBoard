<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EC407A"
    android:clipToPadding="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sustained"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/sustained"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/powerful"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerful"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/power"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/technical"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/technical"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/tech"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/crimpy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/problemname"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginStart="92dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="53dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favroute"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_star_off" />

    <ImageView
        android:id="@+id/crimpy"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/crimpy"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/completed"
        android:layout_width="188dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="#FF0000"
        app:layout_constraintStart_toEndOf="@+id/sustained"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="6dp"
        android:text="Completed"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/completed"
        app:layout_constraintTop_toTopOf="@+id/completed" />
</androidx.constraintlayout.widget.ConstraintLayout>